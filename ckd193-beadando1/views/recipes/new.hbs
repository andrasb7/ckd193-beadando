<div class="page-header">
    <h1>Új recept felvétele</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.name}}
                has-error
            {{/if}}
        ">
            <label for="name" class="col-lg-2 control-label">Név</label>
            <div class="col-lg-10">
                <input class="form-control" id="name" name="name" type="text" value="{{data.name}}">
                {{#if validationErrors.name}}
                    <span class="help-block">{{validationErrors.name.msg}}</span>
                {{/if}}
                <div class="help-block with-errors"></div>
            </div>
        </div>
        
        <div class="form-group
            {{#if validationErrors.type}}
                has-error
            {{/if}}
        ">
            <label for="type" class="col-lg-2 control-label">Típus</label>
            <div class="col-lg-10">
                <select class="form-control" name="type" id="type">
                    {{#each types}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
                <span class="help-block">Meg kell adni a típust</span>
                {{#if validationErrors.type}}
                    <span class="help-block">{{validationErrors.types.msg}}</span>
                {{/if}}
                <div class="help-block with-errors"></div>
            </div>
        </div>
                <div class="form-group
            {{#if validationErrors.base}}
                has-error
            {{/if}}
        ">
            <label for="base" class="col-lg-2 control-label">Alap</label>
            <div class="col-lg-10">
                <select class="form-control" name="base" id="base">
                    {{#each base}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
                <span class="help-block">Meg kell adni az alapitalt</span>
                {{#if validationErrors.base}}
                    <span class="help-block">{{validationErrors.base.msg}}</span>
                {{/if}}
                <div class="help-block with-errors"></div>
            </div>
        </div>
                <div class="form-group
            {{#if validationErrors.recipe}}
                has-error
            {{/if}}
        ">
            <label for="recipe" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="recipe" name="recipe"  placeholder="pl. 4 cl vodka, 4cl narancslé... stb" >{{data.recipe}}</textarea>
                <span class="help-block">Meg kell adni a pontos receptet.</span>
                {{#if validationErrors.recipe}}
                    <span class="help-block">{{validationErrors.recipes.msg}}</span>
                {{/if}}
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
</form>  